<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.JavaTutorial" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="btn">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:paddingHorizontal">30dp</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:layout_marginVertical">@dimen/_10sdp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="AuthenticationInput">
        <item name="android:layout_marginHorizontal">@dimen/_15sdp</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_marginVertical">@dimen/_7sdp</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:background">@drawable/rounded_textbox</item>
        <item name="android:paddingHorizontal">@dimen/_20sdp</item>
    </style>

    <style name="Theme.JavaTutorial" parent="Base.Theme.JavaTutorial" />
</resources>