<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEF5E5"
    tools:context=".SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#0EA293"
        android:gravity="center_vertical"
        android:id="@+id/topnav">

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/logo"
            android:padding="@dimen/_4sdp"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java Tutorial"
            android:textColor="@color/white"
            android:textSize="@dimen/_22ssp"
            android:textStyle="bold"></TextView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topnav"
        android:layout_marginTop="@dimen/_10sdp">

        <TextView
            android:id="@+id/log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGNUP"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"
            android:textColor="#0EA293"
            android:layout_centerHorizontal="true"
            ></TextView>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/log"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="Name:"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/inputname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_31sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_below="@+id/name"
            android:inputType="text"
            android:background="@drawable/rounded_textbox"
            android:paddingHorizontal="@dimen/_17sdp"
            ></EditText>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputname"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="Email:"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/inputemail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_31sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_below="@+id/email"
            android:inputType="text"
            android:background="@drawable/rounded_textbox"
            android:paddingHorizontal="@dimen/_17sdp"
            ></EditText>

        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputemail"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_13sdp"
            android:text="Password:"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/inputpass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_31sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_below="@+id/password"
            android:inputType="text"
            android:background="@drawable/rounded_textbox"
            android:paddingHorizontal="@dimen/_17sdp"
            ></EditText>

        <TextView
            android:id="@+id/m_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputpass"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_13sdp"
            android:layout_marginBottom="@dimen/_13sdp"
            android:text="Mobile No:"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"></TextView>
        <EditText
            android:id="@+id/inputm_no"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_31sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_below="@+id/m_no"
            android:inputType="text"
            android:background="@drawable/rounded_textbox"
            android:paddingHorizontal="@dimen/_17sdp"
            ></EditText>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signupbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signup"
            android:textSize="@dimen/_20ssp"
            android:paddingHorizontal="@dimen/_30sdp"
            android:background="@drawable/rounded_corner"
            android:layout_below="@+id/inputm_no"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="@color/white"></androidx.appcompat.widget.AppCompatButton>

        <TextView
            android:id="@+id/signuptext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signupbtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Login if you already have account."
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_below="@+id/signuptext"
            android:id="@+id/or"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_20sdp">
            <View
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_2sdp"
                android:background="@color/black">
            </View>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or"
                android:textStyle="bold"
                android:textSize="@dimen/_17ssp"
                android:layout_marginHorizontal="@dimen/_15sdp">
            </TextView>
            <View
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_2sdp"
                android:background="@color/black">
            </View>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_google"
            android:paddingVertical="@dimen/_7sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/google"
                android:layout_marginHorizontal="6dp"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Signup with google"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold"
                android:layout_marginHorizontal="@dimen/_5sdp">
            </TextView>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>