<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment"
    android:gravity="center"
    android:background="@color/white"
    android:padding="@dimen/_10sdp">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Java Tutorial"
        android:textStyle="bold"
        android:textColor="#2e8b57"
        android:gravity="center_horizontal"
        android:textSize="@dimen/_35ssp"
        android:id="@+id/heading"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dvjvif jffnvjfbv jvbjfbv jbvjbv nvjfbv vjfbvb jbjc jbcjbdc"
        android:textSize="@dimen/_20ssp"
        android:layout_below="@+id/heading"
        android:layout_marginVertical="@dimen/_7sdp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:gravity="center_horizontal"
        android:id="@+id/text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_280sdp"
        android:orientation="vertical"
        android:layout_below="@+id/text"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#00514b"
        android:id="@+id/img"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_10sdp">

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_240sdp"
        android:src="@drawable/img"
        android:id="@+id/homeimg"
        android:layout_below="@+id/text"
        android:layout_marginVertical="@dimen/_15sdp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textSize="@dimen/_20ssp"
        android:layout_below="@+id/homeimg"
        android:gravity="center_horizontal"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#ECECEC"
        android:textColor="@color/black"
        android:layout_marginHorizontal="@dimen/_50sdp"
        android:paddingVertical="@dimen/_4sdp"
        android:id="@+id/startbtn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compiler"
        android:textSize="@dimen/_20ssp"
        android:layout_below="@+id/startbtn"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#118915"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_marginVertical="@dimen/_15sdp"
        android:layout_marginHorizontal="@dimen/_40sdp"
        android:padding="@dimen/_4sdp"/>

</RelativeLayout>